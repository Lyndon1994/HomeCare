@model IEnumerable<HomeCare.Models.Alert>

@{
    ViewData["Title"] = "列表";
}

<h1>警报</h1>

<p>
    <a class="btn btn-primary" role="button" asp-action="Create">新增</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Oldman)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Createtime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oldman)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Result1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Result2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Result3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Createtime)
            </td>
            <td>
                <a class="btn btn-outline-primary" role="button" asp-action="Edit" asp-route-id="@item.Id">编辑</a>
                <a class="btn btn-outline-primary" role="button" asp-action="Details" asp-route-id="@item.Id">详情</a>
                <a class="btn btn-outline-danger" role="button" asp-action="Delete" asp-route-id="@item.Id">删除</a>
            </td>
        </tr>
}
    </tbody>
</table>
